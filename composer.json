{
    "name": "apphp/ai-for-php-developers-examples",
    "description": "Examples for AI for PHP Developers book",
    "type": "project",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "packageGroups": {
        "system": [
            "php",
            "slim/slim",
            "slim/psr7",
            "slim/php-view"
        ],
        "ml": [
            "php-ai/php-ml",
            "rubix/ml"
        ],
        "code-quality": [
            "friendsofphp/php-cs-fixer",
            "overtrue/phplint"
        ],
        "testing": [
            "phpunit/phpunit",
            "guzzlehttp/guzzle"
        ]
    },
    "require": {
        "slim/slim": "~4.12",
        "slim/psr7": "~1.6",
        "slim/php-view": "~3.3",
        "php-ai/php-ml": "0.10.0",
        "rubix/ml": "~2.5.3"
    },
    "require-dev": {
        "overtrue/phplint": "^6.1.0",
        "friendsofphp/php-cs-fixer": "^3.82.2",
        "phpunit/phpunit": "^10.5",
        "guzzlehttp/guzzle": "^7.8"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app/"
        }
    },
    "scripts": {
        "php-lint": "phplint",
        "php-lint-with-log": "phplint > tmp/.phplint.result.log",
        "php-cs-check": "php-cs-fixer --config=.php-cs --allow-risky=yes --verbose --show-progress=dots --dry-run fix",
        "php-cs-check-diff": "php-cs-fixer --config=.php-cs --allow-risky=yes --verbose --show-progress=dots --diff --dry-run fix",
        "php-cs-fix": "php-cs-fixer --config=.php-cs --allow-risky=yes --verbose --show-progress=dots fix",
        "test": "phpunit"
    }
}
